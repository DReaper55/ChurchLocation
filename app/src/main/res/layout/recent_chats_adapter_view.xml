<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/recentChatsView"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_my_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/mUserName"
        android:layout_width="match_parent"
        android:layout_height="24sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/circle_profile_image"
        android:text="Username"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mTextMessage"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_below="@id/mUserName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/circle_profile_image"
        android:text="Message"
        android:textSize="15sp" />

</RelativeLayout>

